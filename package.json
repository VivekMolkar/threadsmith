{
  "name": "threadsmith",
  "version": "0.1.0",
  "description": "A CLI tool to craft and publish threads with a guided, human-in-the-loop workflow.",
  "type": "commonjs",
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "bin": {
    "threadsmith": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node --transpile-only src/index.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "vitest"
  },
  "dependencies": {
    "clipboardy": "^3.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  }
}
